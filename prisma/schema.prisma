generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum Status {
  pending
  declined
  approved
}

model RemovalRequest {
  id          Int    @id @default(sequence())
  name        String
  idcard      String
  description String
  image_path  String
  email       String
  status      Status @default(pending)
}

model events {
  id               Int       @id @default(sequence())
  name             String    @unique
  description      String
  shortDescription String // New field for short description
  image            String
  type             EventType
  day              Day
  visibility       State
}

enum EventType {
  core
  technical
  nontechnical
  special
}

enum Day {
  day1
  day2
  day3
}

enum State {
  active
  inactive
}

enum Teamgroup {
  media
  socialmedia
  developer
  none
}

model team {
  id          Int       @id @default(sequence())
  name        String
  committee   Teamgroup
  designation String
  image       String
  say         String
}

model webAnalytics {
  id           Int      @id @default(sequence())
  session_user String
  uniqueId     String
  routePath    String
  isChecked    String
  timer        Int?
  startPing    DateTime
  lastPing     DateTime
}

model downloadLog {
  id           Int      @id @default(sequence())
  session_user String
  date_time    DateTime @default(now())
  image_id     Int
  Gallery      Gallery  @relation(fields: [image_id], references: [id])
}

model Gallery {
  id              Int           @id @default(sequence())
  image_path      String
  compressed_path String
  event_name      String?
  event_category  String
  authored_id Int 
  upload_type     String
  state           Status
  date_time       DateTime      @default(now())
  downloadLog     downloadLog[]
  galleryLikes    GalleryLike[] 
}

model Smcuploads {
  id          Int      @id @default(sequence())
  video_path  String
  description String
  author      String
  date_time   DateTime @default(now())
}

model Stories {
  id            Int      @id @default(sequence())
  video_path    String
  category_name String
  authored_id Int
  date_time     DateTime @default(now())
}

model storycategories {
  id   Int    @id @default(sequence())
  name String @unique
}

enum Role {
  admin
  manager
  editor
  user
  smc
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  role          Role          @default(user)
  galleryLikes  GalleryLike[] // Add this reciprocal relation
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AuditLog {
  id              Int      @id @default(sequence())
  sessionUserName String
  dateTime        DateTime @default(now())
  description     String
}

model CaptureCard {
  id        Int    @id @default(sequence())
  cardName  String
  cardState State
}

model Variables {
  id    Int    @id @default(sequence())
  key   String @unique
  value String
}

model VerifiedEmail {
  id    Int    @id @default(sequence())
  email String
}

model GalleryLike {
  id        String   @id @default(cuid())
  userId    String   // Required
  galleryId Int      // Required
  liked     Boolean  @default(true)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  gallery   Gallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  @@unique([userId, galleryId]) // Ensures a user can only like a gallery entry once
}

model Playbacks {
  id         Int   @id @default(sequence())
  videoPath  String
  name String
  description String
}
